extends /pug/includes/template
append config
  -currentPage = 'Clase (video)'

mixin chat-message(message)
  .chat__message
    .chat__message-avatar
      img(src="https://cursos.ed.team/sites/default/files/styles/thumbnail/public/img/users/picture-1-1472485361.jpg?itok=ajWlX7yg" alt="nombre-de-usuario")
    .chat__mensage-content
      span.chat__message-user.small Alvaro Felipe
      span.chat__message-date.small 16:32
      p.chat__message-comment=message

block topbar
